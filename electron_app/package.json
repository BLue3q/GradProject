{
  "name": "electron_app",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "./run-electron-dev.sh",
    "dev:vite": "vite",
    "dev:electron": "concurrently \"npm run dev:vite\" \"npm run electron:wait\"",
    "electron:wait": "wait-on http://localhost:5173 && npm run electron:start",
    "electron:start": "npm run build:electron && electron .",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"node scripts/build-electron-scripts.js && wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && node scripts/build-electron-scripts.js && node scripts/build-electron.js",
    "electron:preview": "electron ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^36.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.electron.cppvisualizer",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  }
}
